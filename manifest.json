{
  "manifest_version": 2,

  "name": "Skribblr",
  "description": "A Chrome extension for annotating web pages",
  "version": "1.0",

  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["init.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_title": "A Chrome extension for annotating web pages"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "css": ["styles/css/skribblr.css"],
      "js": ["node_modules/jquery/dist/jquery.min.js", "scripts/vendor/sketch.min.js"]
    }
  ]
}